<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.phytok.apps.youcast">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Youcast">

        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ShareUrlActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:host="www.youtube.com" android:mimeType="text/*" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.DownloadStatusActivity"
            android:label="@string/activity_big_picture_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>

        <service
            android:name=".handlers.DownloadService"
            android:exported="false">
        </service>

        <service
            android:name=".handlers.CancelTrackIntentService"
            android:exported="false">
        </service>

    </application>

</manifest>